    </div>
    <input type="hidden" name="_csrf" value="<%= _csrf %>">
    <div class="row d-flex align-items-center">
      <div class="col-3">
        <label for="forumName" class="form-label">Board Name</label>
      </div>
      <div class="col-9">
        <input type="text" class="form-control" name="forumName" id="forumName" value="<%= forumName %>">
      </div>
    </div>
  </form>
</div>