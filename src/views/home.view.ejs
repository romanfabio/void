<% if(!forums.length) { %>
    <div class="card-header text-center">
        No Forums Yet
    </div>
    <% } else { %>
    <% for(let i = 0; i < forums.length; i++) { %>
    <a href="/f/<%= forums[i].name %>" style="text-decoration: none; color: black">
        <div class="card mb-4">
            <div class="card-body">
                <h2 class="card-title"><%= forums[i].name %></h2>
                <p class="card-text text-truncate"><%= forums[i].description %></p>
            </div>
        </div>
    </a>
    <% } } %>
    <nav aria-label="Pagination">
        <hr class="my-0">
        <ul class="pagination justify-content-center my-4">
            <li class="page-item <%= (firstPage?'disabled':'') %>">
                <a class="page-link" href="<%= (firstPage?'#':'/?p=' + (page-1)) %>">&lt;</a>
            </li>
            <li class="page-item active">
                <a class="page-link" href="/?p=<%= page %>"><%= (page + 1) %></a>
            </li>
            <li class="page-item <%= (lastPage?'disabled':'') %>">
                <a class="page-link" href="<%= (lastPage?'#':'/?p=' + (page+1)) %>">&gt;</a>
            </li>
        </ul>
    </nav>