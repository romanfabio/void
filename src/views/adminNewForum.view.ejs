<h2 class="pb-2">Admin Control Panel</h2>

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" href="/admin/general">General</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="/admin/forum">Forums</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/admin/pex">Permissions</a>
    </li>
</ul>

<div class="my-4">
    <div class="text-center">
        <h4>New Forum</h4>
    </div>

    <form method="post">
        <input type="hidden" name="_csrf" value="<%= _csrf %>">
        
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" name="name" id="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" class="form-control" id="description" cols="30" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <input type="checkbox" class="form-check-input" name="starred" id="starred">
            <label for="starred" class="form-check-label">Starred</label>
        </div>

        <div class="d-flex justify-content-end">
            <button class="btn btn-primary">Create</button>
        </div>
    </form>
</div>